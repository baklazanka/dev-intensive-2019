<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>

        <item name="colorAccentedSurface">@color/color_primary_light</item>
        <item name="colorIcon">@color/color_gray</item>
        <item name="colorDivider">@color/color_divider_dark</item>

        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowAnimationStyle">@style/ActivityTransitions</item>

        <item name="colorGrayDark">@color/color_gray_dark</item>
        <item name="colorGrayVeryLight">@color/color_gray_very_light</item>
        <item name="colorPrimaryLight">@color/color_primary_light</item>

        <item name="colorItemBackground">@android:color/white</item>
        <item name="colorItemIndicator">@color/color_green</item>
        <item name="colorItemCounter">@color/color_indicator</item>
        <item name="colorDone">@color/color_primary</item>
        <item name="colorSwipe">@color/color_primary_dark</item>
        <item name="colorChipClose">@android:color/white</item>
        <item name="colorItemDivider">@android:color/black</item>

        <item name="snackbarStyle">@style/SnackbarStyle</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/ic_splash</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="colorPrimary">@color/color_primary</item>
    </style>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light"/>
</resources>